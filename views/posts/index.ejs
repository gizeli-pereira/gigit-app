<%- include('../partials/header') %>

<h3><%= title %></h3>
<div class="allposts-container">
    <!-- Show Posts from the newest to oldest using 'sort' -->
    <% posts.sort(function(a, b) { return b.createdAt - a.createdAt; }).forEach(function(p) { %>
     
        <div class="user-post"><img alt="avatar" src="<%= p.userAvatar %>" referrerpolicy="no-referrer" ><%= p.userName %> -- </div>
        <div id="post-date"><%= p.createdAt.toLocaleDateString() %></div>

        <div class="user-post-content">
            <div class="post-card">
                <div id="post-title">
                    <strong><%= p.title %></strong>
                </div>
                <br />
                    <div><%- p.content %></div>
                <br />
            </div>
            <div>
                <h6><%= p.comments.length %> comments </h6>
            </div>
            <div class="post-wrapper">
                <button class="post-buttons"><a href="/posts/<%= p._id %>">Show Comments</a></button>
            <div>
                <% if (user?._id.equals(p.user)) { %>
                    <button class="post-buttons" type="submit" id="edit-btn"><a href="/posts/<%= p._id %>/edit">Edit Post</a></button>
                <% } %>
            </div>
            <div >
                <% if (user?._id.equals(p.user)) { %>
                    <form action="/posts/<%= p._id %>?_method=DELETE" class="delete-form" method="POST">
                        <button class="post-buttons" type="submit">Delete Post</button>
                    </form>
                <% } %>
            </div>
        </div>
        <hr />    
    </div>
    <% }); %>
</div>

<%- include('../partials/footer') %>